# ============================================
# Supabase Configuration
# ============================================
POSTGRES_PASSWORD=your-super-secret-password-change-this-min-32-chars
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
JWT_EXP=3600

# Supabase External URLs (für Produktion anpassen)
API_EXTERNAL_URL=http://localhost:8000
GOTRUE_SITE_URL=http://localhost:3000
GOTRUE_URI_ALLOW_LIST=

# Supabase Auth Settings
GOTRUE_DISABLE_SIGNUP=false
GOTRUE_SMTP_ADMIN_EMAIL=admin@inclusions.zone
GOTRUE_SMTP_HOST=smtp.resend.com
GOTRUE_SMTP_PORT=587
GOTRUE_SMTP_USER=resend
GOTRUE_SMTP_PASS=your-resend-api-key-here

# Supabase Studio
DEFAULT_ORGANIZATION_NAME=Inclusions
DEFAULT_PROJECT_NAME=inclusions-2
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# ============================================
# Umami Analytics
# ============================================
UMAMI_DB_NAME=umami
UMAMI_DB_USER=umami
UMAMI_DB_PASSWORD=umami-secret-password-change-this
UMAMI_HASH_SALT=change-this-to-a-random-string-min-32-chars
UMAMI_APP_SECURE=false
UMAMI_APP_BASE_URL=http://localhost:3000

# ============================================
# Resend (E-Mail Service)
# ============================================
RESEND_API_KEY=re_your-resend-api-key-here
RESEND_FROM_EMAIL=noreply@inclusions.zone
RESEND_ADMIN_EMAIL=admin@inclusions.zone

# ============================================
# Next.js Backend
# ============================================
NEXT_PUBLIC_SUPABASE_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
NEXT_PUBLIC_UMAMI_URL=http://localhost:3000
NEXT_PUBLIC_UMAMI_WEBSITE_ID=

# ============================================
# Security
# ============================================
# Rate Limiting (Requests pro Minute pro IP)
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Admin Credentials (für ersten Login)
ADMIN_EMAIL=admin@inclusions.zone
ADMIN_PASSWORD=change-this-secure-password

